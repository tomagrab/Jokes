@{
    ViewData["Title"] = "Home Page";
}

<div class="container mx-auto pt-16">
    <div class="flex flex-col md:flex-row items-center">
        <div class="md:w-1/2 text-center md:text-left mb-8 md:mb-0">
            <h1 class="text-4xl font-bold mb-4">Focus on Your Tasks</h1>
            <p class="text-gray-700">Our simple yet powerful tool helps you stay organized and achieve your goals. Get started for free!</p>
            <a href="/signup" class="btn inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-4">Create Free Account</a>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-12">
        <div class="text-center">
            <i class="fas fa-list fa-2x text-indigo-500 mb-2"></i>
            <h3 class="text-lg font-medium mb-2">Create Task Lists</h3>
            <p class="text-gray-600">Break down projects into manageable lists.</p>
        </div>
    </div>
</div>