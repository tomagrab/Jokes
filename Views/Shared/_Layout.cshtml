<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Jokes</title>
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>
<body>
    <div class="flex min-h-screen">

        <input type="checkbox" id="sidebar-toggle" name="sidebar-toggle" class="hidden" checked />

        <aside class="sidebar transition-all duration-300 ease-in-out overflow-hidden bg-velgray" id="sidebar">
            <div class="h-16 bg-velblue">

            </div>
            <div class="">
                <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                <a asp-area="" asp-controller="Jokes" asp-action="Index">Jokes</a>
            </div>
        </aside>

        <div class="flex flex-col grow">
            <header class="flex items-center w-full h-16 bg-white">
                <div class="justify-start w-1/2">
                    <label htmlFor="sidebar-toggle" for="sidebar-toggle" class="cursor-pointer">
                        Toggle Sidebar
                    </label>
                </div>
                <div class="flex shrink-0 justify-center">
                    <a asp-area="" asp-controller="Home" asp-action="Index">Jokes</a>
                </div>
                <div class="flex justify-end w-1/2">
                    <partial name="_LoginPartial" />
                </div>
            </header>
            
            <div class="flex flex-1 bg-slate-200 p-4">
                <main role="main" class="max-h-[calc(100vh-8rem)] flex-1 overflow-auto rounded bg-white p-4">
                    @RenderBody()
                </main>
            </div>
             <footer class="">
            <div class="text-sm">
                &copy; 2024 <a class="text-vellink" href="https://www.velsol.com/" target="_blank">Velocitor Solutions</a>
            </div>
        </footer>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
